generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  image         String?
  favoriteMovie String?
  createdAt     DateTime @default(now())
  facts         Fact[]
}

model Fact {
  id        String   @id @default(cuid())
  userId    String
  movie     String
  text      String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
